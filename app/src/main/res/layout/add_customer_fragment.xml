<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="myCartVM"
            type="com.switchsolutions.farmtohome.bdo.CartViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray"
        tools:context=".fragments.CreateRequestFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>


            <EditText
                android:id="@+id/et_select_customer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:paddingStart="5dp"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter Name"
                android:inputType="textPersonName"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_select_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/et_enter_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:paddingStart="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_edittext_bg"
                android:ems="10"
                android:hint="Enter Phone"
                android:inputType="phone"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/et_customer_address"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:maxLines="3"
                android:maxLength="4"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter Address"
                android:inputType="textPostalAddress"/>

            <TextView
                android:id="@+id/tv_customer_sectors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sector"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tv_customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/et_customer_email"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:maxLines="3"
                android:maxLength="4"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"/>
            <TextView
                android:id="@+id/tv_customer_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/et_customer_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:maxLines="3"
                android:maxLength="4"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_edittext_bg"
                android:hint="Enter Password"
                android:inputType="textVisiblePassword"/>

            <TextView
                android:id="@+id/tv_customer_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"/>

<!--            <com.pchmn.materialchips.ChipsInput-->
<!--                android:id="@+id/ci_products"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                android:layout_marginStart="15dp"-->
<!--                android:paddingStart="10dp"-->
<!--                android:paddingEnd="5dp"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                app:hint="Enter Product" />-->
        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:minHeight="48dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            app:fb_defaultColor="@color/colorAccent"
            app:fb_radius="20dp"
            app:fb_text="Add Customer"
            app:fb_textColor="#FFFFFF" />
    </LinearLayout>
</layout>
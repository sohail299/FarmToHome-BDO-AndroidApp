<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp">
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/product_holder_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="Product Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/product_unit_and_quantity_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Unit"
                android:textColor="#2E2E2E"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/product_name_edit"
                app:layout_constraintStart_toStartOf="@+id/product_name_edit"
                app:layout_constraintTop_toBottomOf="@+id/product_name_edit" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginStart="64dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_name_edit"
                app:layout_constraintTop_toBottomOf="@+id/product_name_edit"
                app:layout_constraintVertical_bias="0.567" />

            <TextView
                android:id="@+id/product_unit_and_quantity_cart2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Kg"
                android:textColor="#2E2E2E"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/product_unit_and_quantity_cart"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/product_unit_and_quantity_cart"
                app:layout_constraintTop_toBottomOf="@+id/product_unit_and_quantity_cart" />


            <TextView
                android:id="@+id/total_price_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:fontFamily="@font/montserrat"
                android:text="Quantity"
                android:textColor="#2E2E2E"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/product_unit_and_quantity_cart"
                app:layout_constraintStart_toEndOf="@+id/product_unit_and_quantity_cart"
                app:layout_constraintTop_toTopOf="@+id/product_unit_and_quantity_cart"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#FFF"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/total_qty_cart_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:maxLength="4"
                android:padding="8dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/total_price_cart"
                app:layout_constraintStart_toStartOf="@+id/total_price_cart"
                app:layout_constraintTop_toBottomOf="@+id/total_price_cart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>